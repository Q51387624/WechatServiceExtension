@{Layout = null;}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>微信客服监控系统</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <link rel="shortcut icon" href="favicon.ico">
    <link href="~/css/bootstrap.min.css?v=3.3.6" rel="stylesheet">
    <link href="~/css/font-awesome.css?v=4.4.0" rel="stylesheet">
    <link href="~/css/animate.css" rel="stylesheet">
    <link href="~/css/style.css?v=4.1.0" rel="stylesheet">
    <script>if(window.top !== window.self){ window.top.location = window.location;}</script>
</head>
<body class="gray-bg">
    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <h3>微信客服监控系统</h3>
            <form id="form_login" class="m-t" role="form">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="用户名" name="username" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="登陆密码" name="password" required>
                </div>
                <button id="btnLogin" type="button" class="btn btn-primary block full-width m-b">登 录</button>
                <p class="text-muted text-center"></p>
            </form>
        </div>
    </div>
    <!-- 全局js -->
    <script src="~/js/jquery.min.js?v=2.1.4"></script>
    <script src="~/js/bootstrap.min.js?v=3.3.6"></script>
    <script src="~/js/plugins/validate/jquery.validate.min.js"></script>
    <script src="~/js/plugins/validate/messages_zh.min.js"></script>
    <script type="text/javascript">
        $("#btnLogin").click(function () {
            var i = $("#form_login").validate('submitValidate');
            console.log(i);
            var data = {
                username: $("[name=username]").val(),
                password: $("[name=password]").val()
            };
            $.post("@Url.Action("Login")", data, function (result) {
                if (result.success) {
                    location.href = "/";
                } else {
                    alert("账号或密码错误");
                }
            });
            
        });
        $(document).keypress(function (e) {
            var eCode = e.keyCode ? e.keyCode : e.which ? e.which : e.charCode;
            if (eCode == 13) {
                $("#btnLogin").click();
            }
        });
       
    </script>
</body>
</html>
