@model  WeiXinEx.Entities.Settings
<div class="row">
    <div class="col-sm-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>配置管理</h5>
            </div>
            <div class="ibox-content">
                <form method="post" class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">管理员密码</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" name="password" value="password">
                            <span class="help-block m-b-none">管理员密码,默认(admin888)</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">查阅账号密码</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" name="viewerPassword" value="password">
                            <span class="help-block m-b-none">查阅账号密码,默认(888888)</span>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">接入间隔</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" name="monitorInterval" value="@Model.MonitorInterval">
                            <span class="help-block m-b-none">自动接入客户请求间隔(毫秒),0为自动</span>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">自动接入模块</label>
                        <div class="col-sm-10">
                            <div class="col-sm-1">
                                <input class="tgl tgl-flip" id="enableSession" name="enableSession" type="checkbox" value="true" @(Model.EnableSession ? "checked" : "") />
                                <label class="tgl-btn" data-tg-off="未开启" data-tg-on="已开启" for="enableSession"></label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">接入自动回复</label>
                        <div class="col-sm-10">
                            <div class="col-sm-1">
                                <input class="tgl tgl-flip" id="autoreply" name="autoReply" type="checkbox" value="true" @(Model.AutoReply ? "checked" : "") />
                                <label class="tgl-btn" data-tg-off="未开启" data-tg-on="已开启" for="autoreply"></label>
                            </div>
                            <div class="col-sm-2">
                                <input type="number" class="form-control" name="autoMaxIndex" value="@Model.AutoMaxIndex">
                            </div>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">关键字</label>
                        <div class="col-sm-10">
                            <textarea type="text" rows="10" name="keywords" placeholder="回复消息禁止关键字" class="form-control">@Model.Keywords</textarea>
                            <span class="help-block m-b-none">不同关键字使用 “|” 符号分隔。</span>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">
                            <button class="btn btn-primary" type="submit">保存</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>